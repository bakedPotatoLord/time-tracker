{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    
    "allowSyntheticDefaultImports": true,
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue", "vite-env.d.ts"],
}
